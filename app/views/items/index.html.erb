<div class="container">
  <h1>All items available for collection</h1>
  <div class="cards">
    <% @items.each do |item| %>
    <div class="card-holder">
      <%= link_to item_path(item) do %>
        <div class="card-index">
          <%= cl_image_tag item.pictures[1].key %>
          <div class="card-index-info">
            <div class="card-index-info-top">
              <h2><%= item.name.capitalize %></h2>
              <% if item.user.location %>
                <p><%= item.user.location.capitalize %></p>
              <% end %>
            </div>
            <div class="card-index-info-bottom">
              <h2>Donated 3 days ago</h2>
              <% if item.user.first_name %>
                <span class="card-index-user"><p>by <%= item.user.first_name.capitalize %></p></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
